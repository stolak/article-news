{% extends 'base.html.twig' %}

{% block title %}{{ controller_name }}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
   <section data-bs-version="5.1" class="content2 cid-tjq773xTem" id="content2-k">
    
    <div class="container">
        <div class="mbr-section-head">
            <h4 class="mbr-section-title mbr-fonts-style align-center mb-0 display-2"><strong>{{ controller_name }}</strong></h4>
            <h5 class="mbr-section-subtitle mbr-fonts-style align-center mb-0 mt-2 display-5">Read the recent blog posts about
                Mobirise</h5>
        </div>
        <div class="row mt-4">
            {% for article in articles %}
            <div class="item features-image сol-12 col-md-6 col-lg-6">
                <div class="item-wrapper">
                    <div class="item-img">
                        <img src="{{ article.picture }}" alt="Mobirise Website Builder" title="">
                    </div>
                    <div class="item-content">
                        <h5 class="item-title mbr-fonts-style"><a href="#top" class="text-primary">{{ article.title }}</a></h5>
                        <h6 class="item-subtitle mbr-fonts-style mt-1 display-7"><strong>Jessica Doe
                            </strong><em>{{article.dateAdded}}</em></h6>
                        <p class="mbr-text mbr-fonts-style mt-3 display-7">{{ article.description| raw }}</p>
                    </div>
                    {% if is_granted('ROLE_ADMIN') %}
                    <div class="mbr-section-btn item-footer mt-2">
                        <a href="/news/delete/{{ article.id }}" class="btn btn-danger item-btn display-7" >Delete</a>
                    </div>
                    {% endif %}
                </div>
            </div>
            {# dump(article) #}
            {% endfor %}
            
        </div>
    </div>
     
</section>
<div class="pagination">
        {{ knp_pagination_render(articles) }}
    </div>
</div>

{% endblock %}
